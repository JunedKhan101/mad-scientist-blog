---
const { tagText, tagColor } = Astro.props;
---

<button
	class="tag-btn m-0 p-[5px] mr-[5px] mb-[5px] border-0 rounded font-bold text-white"
	style={tagColor ? `background-color: ${tagColor}` : null}
>
	{tagText}
</button>

<script>
	const buttons = document.querySelectorAll(".tag-btn");
	buttons.forEach((button) => {
		var slug = button.textContent?.trim();
		button.addEventListener("click", () => {
			location.href = `/tags/${slug}`;
		});
	});
</script>
